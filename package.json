{
  "name": "hexagonal-architecture-app",
  "version": "1.0.0",
  "description": "Modern Hexagonal Architecture application with TypeScript",
  "author": "Roja",
  "license": "MIT",
  "main": "dist/main.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register src/main.ts",
    "dev:debug": "nodemon --inspect -r tsconfig-paths/register src/main.ts",
    "dev:watch": "concurrently \"npm run build:watch\" \"npm run dev\"",
    "build": "tsc && tsc-alias",
    "build:watch": "tsc --watch",
    "build:prod": "npm run clean && npm run build && npm run optimize",
    "clean": "rimraf dist coverage .nyc_output",
    "optimize": "terser dist/**/*.js --compress --mangle --output dist/",
    "start": "node -r tsconfig-paths/register src/server.ts",
    "start:prod": "NODE_ENV=production node -r tsconfig-paths/register dist/main.js",
    "start:cluster": "pm2 start ecosystem.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\" \"tests/**/*.{ts,js,json}\" \"*.{json,md,yml,yaml}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\" \"tests/**/*.{ts,js,json}\" \"*.{json,md,yml,yaml}\"",
    "type-check": "tsc --noEmit",
    "db:migrate": "typeorm migration:run",
    "db:migrate:revert": "typeorm migration:revert",
    "db:migrate:generate": "typeorm migration:generate -n",
    "db:seed": "ts-node scripts/seed-database.ts",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed",
    "db:create": "createdb $DB_NAME",
    "db:drop": "dropdb $DB_NAME --if-exists",
    "docker:build": "docker build -t hexagonal-app .",
    "docker:run": "docker run -p 3000:3000 hexagonal-app",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:stop": "docker-compose down",
    "health-check": "curl -f http://localhost:3000/health || exit 1",
    "logs": "pm2 logs",
    "monitor": "pm2 monit",
    "generate:api-docs": "swagger-jsdoc -d swaggerDef.js src/**/*.ts -o docs/api/swagger.json",
    "validate:env": "ts-node scripts/validate-environment.ts",
    "security:audit": "npm audit && snyk test",
    "deps:update": "npm-check-updates -u",
    "deps:check": "npm-check-updates",
    "prerelease": "npm run test:ci && npm run lint && npm run build:prod",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "apollo-server-express": "^3.12.1",
    "aws-sdk": "^2.1489.0",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "concat-map": "^0.0.2",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "graphql": "^16.11.0",
    "graphql-tools": "^8.3.0",
    "helmet": "^7.1.0",
    "inversify": "^6.0.2",
    "ioredis": "^5.3.2",
    "jaeger-client": "^3.19.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongodb": "^6.2.0",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "pino": "^8.16.1",
    "prom-client": "^15.0.0",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.2.2",
    "stripe": "^14.7.0",
    "twilio": "^4.19.0",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.5",
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.8.7",
    "@types/supertest": "^2.0.15",
    "@types/swagger-jsdoc": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.5",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "npm-check-updates": "^16.14.6",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "snyk": "^1.1244.0",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "terser": "^5.24.0",
    "testcontainers": "^10.2.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/main.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "keywords": [
    "hexagonal-architecture",
    "clean-architecture",
    "ddd",
    "typescript",
    "nodejs",
    "ports-and-adapters"
  ]
}
